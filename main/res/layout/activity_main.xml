<?xml version="1.0" encoding="UTF-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="GOLD BUTTON"
            android:textColor="#B57910"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        -

        <LinearLayout
            android:id="@+id/textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/Bottmbox"
            app:layout_constraintTop_toBottomOf="@id/text"
            tools:layout_editor_absoluteX="0dp">
            -

            -

            <LinearLayout
                android:id="@+id/textbox2"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TIME FOR NEXT BLIND"
                    android:textColor="#B57910"
                    android:textSize="35sp" />

                <TextView
                    android:id="@id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 : 00"
                    android:textColor="#B57910"
                    android:textSize="200sp"
                    app:layout_constraintTop_toBottomOf="@+id/text"
                    tools:layout_editor_absoluteX="0dp" />

            </LinearLayout>
            -

            <LinearLayout
                android:id="@+id/RightBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/timeBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/LevelBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/levelText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Level"
                            android:textColor="#B57910"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/levelVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:text="1"
                            android:textColor="#B57910"
                            android:textSize="35sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:background="#B57910" />

                    <LinearLayout
                        android:id="@+id/TotalBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totaltime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="Total Time"
                            android:textColor="#B57910"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/totaltimenum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="00 : 00 : 00"
                            android:textColor="#B57910"
                            android:textSize="35sp"
                            tools:layout_editor_absoluteX="0dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:background="#B57910" />


                    <LinearLayout
                        android:id="@+id/BreakBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/timetobreak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="Time to break"
                            android:textColor="#B57910"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/breaktimenum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="00 : 50 : 00"
                            android:textColor="#B57910"
                            android:textSize="35sp"
                            tools:layout_editor_absoluteX="0dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NextBlindBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/textbox">

                    <TextView
                        android:id="@+id/NextBlind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="NEXT BLINDS"
                        android:textColor="#B57910"
                        android:textSize="40sp"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/NextBlindVal"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2000/4000"
                        android:textColor="#B57910"
                        android:textSize="40sp"
                        tools:layout_editor_absoluteX="0dp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/NextanteBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/BlindBox">

                    <TextView
                        android:id="@+id/NextAnte"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:text="NEXT ANTE"
                        android:textColor="#B57910"
                        android:textSize="40sp"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/NextAnteVal"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=" "
                        android:textColor="#B57910"
                        android:textSize="40sp"
                        tools:layout_editor_absoluteX="0dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        -

        -

        <LinearLayout
            android:id="@+id/Bottmbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textbox"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:id="@+id/textBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/textbox">
                -

                -

                <LinearLayout
                    android:id="@+id/BlindBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/textbox">

                    <TextView
                        android:id="@+id/Blind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="BLINDS"
                        android:textColor="#B57910"
                        android:textSize="60sp"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/BlindVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="1000/2000"
                        android:textColor="#B57910"
                        android:textSize="60sp"
                        tools:layout_editor_absoluteX="0dp" />

                </LinearLayout>
                -

                -

                <LinearLayout
                    android:id="@+id/anteBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/BlindBox">

                    <TextView
                        android:id="@+id/Ante"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ANTE"
                        android:textColor="#B57910"
                        android:textSize="60sp"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/AnteVal"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="58dp"
                        android:gravity="center"
                        android:text=" "
                        android:textColor="#B57910"
                        android:textSize="60sp"
                        tools:layout_editor_absoluteX="0dp" />

                </LinearLayout>
                -





                <LinearLayout
                    android:id="@+id/buttonBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/textBox3">

                    <Button
                        android:id="@+id/start"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#151515"
                        android:clickable="true"
                        android:text="start"
                        android:textColor="#B57910"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/reset"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="4dp"

                        android:background="#151515"
                        android:clickable="true"
                        android:text="Reset"
                        android:textColor="#B57910"
                        android:textSize="25dp"
                        app:layout_constraintLeft_toRightOf="@id/start" />
                    -

                    -

                    <LinearLayout
                        android:id="@+id/updownBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/up"
                            android:layout_width="100dp"
                            android:layout_height="50dp"

                            android:background="#151515"

                            android:clickable="true"
                            android:text="up"
                            android:textColor="#B57910"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toRightOf="@id/reset" />

                        <Button
                            android:id="@+id/down"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:background="#151515"

                            android:clickable="true"
                            android:text="down"
                            android:textColor="#B57910"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toRightOf="@id/reset" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/levelBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/levelup"
                            android:layout_width="100dp"
                            android:layout_height="50dp"

                            android:background="#151515"

                            android:clickable="true"
                            android:text="Lv. up"
                            android:textColor="#B57910"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toRightOf="@id/reset" />

                        <Button
                            android:id="@+id/leveldown"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:background="#151515"
                            android:clickable="true"
                            android:text="Lv. down"
                            android:textColor="#B57910"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toRightOf="@id/reset" />

                    </LinearLayout>
                    <Button
                        android:layout_marginLeft="4dp"
                        android:id="@+id/ver10"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:background="#151515"

                        android:clickable="true"
                        android:text="Tourn."
                        android:textColor="#B57910"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/ver7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="4dp"

                        android:background="#151515"

                        android:clickable="true"
                        android:text="Sit &amp; Go"
                        android:textColor="#808080"
                        android:textSize="20dp"
                        app:layout_constraintLeft_toRightOf="@id/start" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="412dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="110dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>